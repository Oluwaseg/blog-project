    <h1>Blog Categories</h1>

    <!-- Article Section -->
    <div class="category-section article-section">
      <h2 class="category-title">Article</h2>
      <% if (blogsByCategory.Article && blogsByCategory.Article.length > 0) { %>
      <% blogsByCategory.Article.forEach(blog => { %>
      <div class="blog-post article-post">
        <h3 class="blog-post-title"><%= blog.title %></h3>
        <p><%= blog.description %></p>
        <p>By: <%= blog.author.name %> (@<%= blog.author.username %>)</p>
      </div>
      <% }); %> <% } else { %>
      <p>No articles available.</p>
      <% } %>
    </div>

    <!-- News Section -->
    <div class="category-section news-section">
      <h2 class="category-title">News</h2>
      <% if (blogsByCategory.News && blogsByCategory.News.length > 0) { %> <%
      blogsByCategory.News.forEach(blog => { %>
      <div class="blog-post news-post">
        <h3 class="blog-post-title"><%= blog.title %></h3>
        <p><%= blog.description %></p>
        <p>By: <%= blog.author.name %> (@<%= blog.author.username %>)</p>
      </div>
      <% }); %> <% } else { %>
      <p>No news available.</p>
      <% } %>
    </div>

    <!-- Guide Section -->
    <div class="category-section guide-section">
      <h2 class="category-title">Guide</h2>
      <% if (blogsByCategory.Guide && blogsByCategory.Guide.length > 0) { %> <%
      blogsByCategory.Guide.forEach(blog => { %>
