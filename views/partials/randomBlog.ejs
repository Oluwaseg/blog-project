<div
  class="relative bg-gray-50 px-6 pt-16 pb-20 lg:px-8 lg:pt-24 lg:pb-28 dark:bg-gray-900"
>
  <div class="absolute inset-0">
    <div class="h-1/3 bg-white sm:h-2/3 dark:bg-gray-900"></div>
  </div>
  <div class="relative mx-auto max-w-7xl dark:bg-gray-900">
    <div class="text-center">
      <h2
        class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
      >
        Discover Exciting Blogs
      </h2>
      <p
        class="mx-auto mt-3 max-w-2xl text-xl text-gray-500 dark:text-white sm:mt-4"
      >
        Dive into a world of captivating stories and insightful blogs, each
        waiting to be explored.
      </p>
    </div>
    <div class="mx-auto mt-12 grid max-w-lg gap-5 lg:max-w-none lg:grid-cols-3">
      <% let displayedCategories = {}; %> <% let totalDisplayed = 0; %> <% for
      (let category in randomBlogByCategory) { %> <% let blogs =
      randomBlogByCategory[category]; %> <% if (blogs.length > 0 &&
      !displayedCategories[category] && totalDisplayed < 5) { %> <%
      displayedCategories[category] = true; %> <% let blog =
      blogs[Math.floor(Math.random() * blogs.length)]; %> <% totalDisplayed++;
      %>
      <div
        class="flex flex-col overflow-hidden rounded-lg shadow-lg dark:border-4 dark:border-white"
      >
        <div class="flex-shrink-0">
          <img
            class="h-48 w-full object-cover"
            src="<%= blog.image || 'https://images.unsplash.com/photo-1561654791-00316c79efa8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1yZWxhdGVkfDE5fHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=900&q=60' %>"
            alt="<%= blog.title %>"
          />
        </div>
        <div
          class="flex flex-1 flex-col justify-between bg-white p-6 dark:bg-gray-900"
        >
          <div class="flex-1">
            <p class="text-sm font-medium text-indigo-600">
              <a class="hover:underline"><%= blog.category %></a>
            </p>
            <a href="/blog/<%= blog.slug %>" class="mt-2 block">
              <p
                class="text-xl font-semibold text-gray-900 hover:text-indigo-600 dark:text-white"
              >
                <%= blog.title %>
              </p>
              <p class="mt-3 text-base text-gray-500 dark:text-white">
                <%= blog.description %>
              </p>
            </a>
          </div>
          <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
              <a>
                <span class="sr-only"><%= blog.author.name %></span>
                <img
                  class="h-10 w-10 rounded-full"
                  src="<%= blog.author.image || 'https://images.unsplash.com/photo-1561654791-00316c79efa8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1yZWxhdGVkfDE5fHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=900&q=60' %>"
                  alt="<%= blog.author.name %>"
                />
              </a>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900 dark:text-white">
                <a class="hover:underline"><%= blog.author.name %></a>
              </p>
              <div class="flex space-x-1 text-sm text-gray-500 dark:text-white">
                <time> <%= blog.createdAt.toDateString() %> </time>
                <span aria-hidden="true">Â·</span>
                <span>6 min read</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %> <% } %> <% if (totalDisplayed === 0) { %>
      <p class="text-center text-gray-500">No blogs available.</p>
      <% } %>
    </div>
  </div>
</div>
<%- include('../partials/footer.ejs') %>
